@page
@model Proiect_Selin_Robert_Cristian.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="text-center">
    <a asp-page="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].SportsField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].SportsField.SportsFacility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].CheckOutDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportsField.Field_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportsField.SportsFacility.SportsFacilityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
